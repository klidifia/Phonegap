<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.test" versionCode="10" version="1.0.0">
  <preference name="phonegap-version" value="cli-6.3.0" />
  <name>Phonegap Build Starter Application</name>
  <description>Starter application for Phonegap Build.</description>
  <author href="http://www.facebook.com/klidifia" email="klidifia@hotmail.com">Hayden Reid</author>
  <content src="index.html" />

  <preference name="permissions" value="none" />
  <preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="3000" />

  <platform name="android" />
  <platform name="ios" />

  <!-- Plugins -->
  <plugin name="cordova-plugin-inappbrowser" version="1.3.0" source="npm" />
  <plugin name="cordova-plugin-whitelist" version="1.2.1" source="npm" />

  <!-- Icon -->
  <icon src="icon.png" />
  <!-- Android -->
  <icon src="images/android/icon/ldpi-icon.png" platform="android" qualifier="ldpi" />
  <icon src="images/android/icon/mdpi-icon.png" platform="android" qualifier="mdpi" />
  <icon src="images/android/icon/hdpi-icon.png" platform="android" qualifier="hdpi" />
  <icon src="images/android/icon/xhdpi-icon.png" platform="android" qualifier="xhdpi" />
  <icon src="images/android/icon/xxhdpi-icon.png" platform="android" qualifier="xxhdpi" />
  <icon src="images/android/icon/xxxhdpi-icon.png" platform="android" qualifier="xxxhdpi" />
  <!-- iOS -->
  <icon src="images/ios/icon/icon-60@3x.png" platform="ios" width="180" height="180" />
  <icon src="images/ios/icon/icon-60.png" platform="ios" width="60" height="60" />
  <icon src="images/ios/icon/icon-60@2x.png" platform="ios" width="120" height="120" />
  <icon src="images/ios/icon/icon-76.png" platform="ios" width="76" height="76" />
  <icon src="images/ios/icon/icon-76@2x.png" platform="ios" width="152" height="152" />
  <icon src="images/ios/icon/icon-small.png" platform="ios" width="29" height="29" />
  <icon src="images/ios/icon/icon-small@2x.png" platform="ios" width="58" height="58" />
  <icon src="images/ios/icon/icon-40.png" platform="ios" width="40" height="40" />
  <icon src="images/ios/icon/icon-40@2x.png" platform="ios" width="80" height="80" />
  <icon src="images/ios/icon/icon.png" platform="ios" width="57" height="57" />
  <icon src="images/ios/icon/icon@2x.png" platform="ios" width="114" height="114" />
  <icon src="images/ios/icon/icon-72.png" platform="ios" width="72" height="72" />
  <icon src="images/ios/icon/icon-72@2x.png" platform="ios" width="144" height="144" />
  <icon src="images/ios/icon/icon-50.png" platform="ios" width="50" height="50" />
  <icon src="images/ios/icon/icon-50@2x.png" platform="ios" width="100" height="100" />

  <!-- Splash screen -->
  <splash src="splash.png" width="320" height="125" />
  <!-- Android -->
  <splash src="images/android/splash/ldpi.png" platform="android" qualifier="ldpi" />
  <splash src="images/android/splash/mdpi.png" platform="android" qualifier="mdpi" />
  <splash src="images/android/splash/hdpi.png" platform="android" qualifier="hdpi" />
  <splash src="images/android/splash/xhdpi.png" platform="android" qualifier="xhdpi" />
  <splash src="images/android/splash/xxhdpi.png" platform="android" qualifier="xxhdpi" />
  <!-- iOS -->
  <splash src="images/ios/splash/Default~iphone.png" platform="ios" width="320" height="480" />
  <splash src="images/ios/splash/Default@2x~iphone.png" platform="ios" width="640" height="960" />
  <splash src="images/ios/splash/Default-568h@2x~iphone.png" platform="ios" width="640" height="1136" />
  <splash src="images/ios/splash/Default-Portrait~ipad.png" platform="ios" width="768" height="1024" />
  <splash src="images/ios/splash/Default-Landscape~ipad.png" platform="ios" width="1024" height="768" />
  <splash src="images/ios/splash/Default-Portrait@2x~ipad.png" platform="ios" width="1536" height="2048" />
  <splash src="images/ios/splash/Default-Landscape@2x~ipad.png" platform="ios" width="2048" height="1536" />
  <splash src="images/ios/splash/Default-667h.png" platform="ios" width="750" height="1334" />
  <splash src="images/ios/splash/Default-736h.png" platform="ios" width="1242" height="2208" />
  <splash src="images/ios/splash/Default-Landscape-736h.png" platform="ios" width="2208" height="1242" />

  <!-- Allowing access everywhere (dangerous) -->
  <allow-navigation href="*://*/*" />
  <allow-intent href="*://*/*" />
  <access origin="*://*/*" />
</widget>
